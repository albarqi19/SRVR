# Railway Environment Configuration for GARB Project

# Database Configuration (Will be provided by Railway MySQL service)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Application Configuration
APP_NAME="GARB Project"
APP_ENV=production
APP_DEBUG=false
APP_URL=${RAILWAY_STATIC_URL}

# Laravel specific
SESSION_DRIVER=database
CACHE_DRIVER=database
QUEUE_CONNECTION=database
LOG_CHANNEL=errorlog

# Mail Configuration (Optional - configure if needed)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@garb-project.com"
MAIL_FROM_NAME="${APP_NAME}"

# Localization
APP_LOCALE=ar
APP_FALLBACK_LOCALE=ar
APP_FAKER_LOCALE=ar_SA

# Security
BCRYPT_ROUNDS=12
